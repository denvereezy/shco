<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <th>Teacher</th>
            <th>For month</th>
            <th>Amount</th>
            <th>Date paid</th>
            <th>Payment status</th>
            <th>Actions</th>
            <tbody>
                {{#each result}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{month}}</td>
                        <td>R{{amount}}</td>
                        <td>{{payment_date}}</td>
                        <td>{{status}}</td>
                        <td>
                            <form class="" action="/teacher-payment/update/{{id}}" method="post">
                                <input type="submit" name="{{status}}" class="btn btn-success" value="Confirm">
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </thead>
    </table>
</div>
<script src="/js/jquery.min.js"></script>
<script type="text/javascript">
    if ($("input[name='confirmed']")) {
        $("input[name='confirmed']").prop('disabled', true);
        $("input[name='confirmed']").val('Confirmed');
    };
</script>
