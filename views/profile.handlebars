{{#data}}
<form class="col-sm-8" action="profile/update/{{id}}" method="post">
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" name="username" value="{{username}}" disabled>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" type="password" name="password">
  </div>
  <input class="btn btn-success" type="submit" name="" value="Update">
  <input class="btn btn-default pull-right" type="button" name="" value="Cancel" onclick="goBack()">
</form>
{{/data}}
