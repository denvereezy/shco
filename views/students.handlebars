{{#if messages.alert}}
    <p class="alert alert-danger">{{messages.alert}}</p>
{{/if}}
{{#if messages.success}}
    <p class="alert alert-success">{{messages.success}}</p>
{{/if}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Add Student</h3>
    </div>
    <div class="panel-body">
        <form class="form-inline" action="/student/add" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="surname">Surname:</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter surname">
            </div>
            <button type="submit" class="btn btn-default form-control">Add</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <th>Name</th>
            <th>Surname</th>
            <th>Actions</th>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{surname}}</td>
                        <td><a class="btn btn-warning" href="/student/edit/{{id}}">Edit</a>
                        </td>
                        <td>
                            <button type="button" onclick="func({{id}})" value="{{name}}" class="btn btn-danger name" data-toggle="modal" data-target="#studentModal">Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </thead>
    </table>
</div>
<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="studentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalLabel">Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <form class="form-inline" id="form" method="post">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/jquery.min.js"></script>
<script type="text/javascript">
    function func(id) {
        $('.modal-body').html('<p>Are you sure?</p>');
        $("#form").attr("action", "/delete/student/" + id);
    }
</script>
