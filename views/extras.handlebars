{{#if admin}}
    {{#if messages.success}}
        <div class="alert alert-success alert-dismissable fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p>{{messages.success}}</p>
        </div>
    {{/if}}
    <div class="table-responsive">
        <a class="btn btn-success pull-right" href="/add-payment">make payment</a>
        <table class="table table-striped">
            <thead class="thead-inverse">
                <th>Amount</th>
                <th>Date paid</th>
                <th>Description</th>
                <th>Actions</th>
                <tbody>
                    {{#each result}}
                        <tr>
                            <td>R{{amount}}</td>
                            <td>{{payment_date}}</td>
                            <td><textarea name="name" rows="2" cols="20" disabled="true">{{comments}}</textarea></td>
                            <td><a class="btn btn-warning" href="/edit/payment/{{id}}">Edit</a>
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" onclick="func({{id}})" data-toggle="modal" data-target="#paymentModal">Delete</button>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </thead>
        </table>
    </div>
    <div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="studentModalLabel">Warning</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <form class="form-inline" id="form" method="post">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/if}}
<script src="/js/jquery.min.js"></script>
<script type="text/javascript">
    function func(id) {
        $('.modal-body').html('<p>Are you sure?</p>');
        $("#form").attr("action", "/delete/payment/" + id);
    }
</script>
