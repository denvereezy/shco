{{#if messages.alert}}
    <p class="alert alert-danger">{{messages.alert}}</p>
{{/if}}
{{#if messages.success}}
    <p class="alert alert-success">{{messages.success}}</p>
{{/if}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Take Attendance</h3>
    </div>
    <div class="panel-body">
        <form class="form-inline" action="/attendance" method="post">
            <div class="form-group">
                <label for="name">Student</label>
                <select class="form-control" name="student_id">
                  {{#each students}}
                  <option value="{{id}}">{{name}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="lesson" name="lesson">
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <select class="form-control" name="subject_id">
                  {{#each subject}}
                  <option value="{{id}}">{{subject}}</option>
                  {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-default form-control">Add</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <th>Name</th>
            <th>Date</th>
            <th>Subject</th>
            <th>Actions</th>
            <tbody>
                {{#each attendance}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{lesson}}</td>
                        <td>{{subject}}</td>
                        <td><a class="btn btn-warning" href="/attendance/edit/{{id}}">Edit</a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger" onclick="deleteAttendance({{id}})" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </thead>
    </table>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalLabel">Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <form class="form-inline" id="form" method="post">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
