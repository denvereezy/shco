{{#if messages.alert}}
  <p class="alert alert-danger">{{messages.alert}}</p>
{{/if}}
{{#if messages.success}}
  <p class="alert alert-success">{{messages.success}}</p>
{{/if}}
<a class="btn btn-success pull-right" href="/make-payment">make payment</a>
<div class="table-responsive">
  <table class="table table-striped" id="payments_table">
    <thead class="thead-inverse">
      <th>Teacher</th>
      <th>For month</th>
      <th>Amount</th>
      <th>Date paid</th>
      <th>Payment status</th>
      <th>&nbsp;</th>
      <tbody>
        {{#each result}}
          <tr>
            <td>{{name}}</td>
            <td>{{month}}</td>
            <td>R{{amount}}</td>
            <td>{{payment_date}}</td>
            <td>{{status}}</td>
            <td class="text-center">
              <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                      Actions <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a class="btn btn-warning form-control" href="/edit/{{id}}">Edit</a></li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <button type="button" onclick="deletePayment({{id}})" class="btn btn-danger form-control" data-toggle="modal" data-target="#paymentModal">Delete</button>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </thead>
  </table>
</div>
<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="studentModalLabel">Warning</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <form class="form-inline" id="form" method="post">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
